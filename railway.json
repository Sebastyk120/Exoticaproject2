{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "aptPackages": [
      "libpango-1.0-0",
      "libcairo2",
      "libgdk-pixbuf2.0-0",
      "libffi-dev"
    ]
  },
  "deploy": {
    "startCommand": "gunicorn Exoticaproject.wsgi:application --bind 0.0.0.0:$PORT --timeout 120 --workers 2 --worker-class sync --max-requests 1000 --max-requests-jitter 50",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}